local PolarGui = Instance.new("ScreenGui")

PolarGui.Parent = game.CoreGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Parent = PolarGui
TextLabel.Size = UDim2.new(1, 0, 1, 0)
TextLabel.Position = UDim2.new(0, 0, -0.1, 0)
TextLabel.BackgroundTransparency = 0
TextLabel.BackgroundColor3 = Color3.new(0, 0, 0)
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.PatrickHand
TextLabel.Text = "Bạn Đã Bị BAN khỏi Trò Chơi Này (Just Kidding)"
TextLabel.TextColor3 = Color3.new(1, 1, 1)
TextLabel.Visible = true

-- Timer --
local function Timer()
print("Hello Worlds")
wait(15)
TextLabel.Text = "Loading..."
wait(60)
TextLabel.Visible = false
wait(0.1)
end

Timer()
